@model EntityLayer.Concrete.Contact
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


@using (Html.BeginForm("Index", "ContactSubplace", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">

                <p class="card-description">Alt Iletişim Düzeneleme Paneli </p>
                <form class="forms-sample">
                    <div class="form-group">
                        <label>Id</label>
                        @Html.TextBoxFor(x=>x.ContactId, new{@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label>Başlık</label>
                        @Html.TextBoxFor(x=>x.Title, new{@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label>Telefone</label>
                        @Html.TextBoxFor(x=>x.Phone, new{@class="form-control"})
                    </div>

                    <div class="form-group">
                        <label for="exampleTextarea1">Açıklama</label>
                        @Html.TextAreaFor(x=>x.Description,6,3, new{@class="form-control"})
                    </div>

                    <button type="submit" class="btn btn-primary mr-2">Güncelleme</button>
                    <button class="btn btn-dark">İptal</button>
                </form>
            </div>
        </div>
    </div>

    <button class="btn btn-success">Güncelle</button>
}


